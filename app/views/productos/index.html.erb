<div class="container">
  <div class="row">
    <div class="col s10">
      <h1>Lista de productos</h1>

      <table class="striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Modelo</th>
            <th>Tipo</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @productos.each do |producto| %>
            <tr>
              <td><%= producto.nombre %></td>
              <td><%= producto.descripcion %></td>
              <td><%= producto.modelo %></td>
              <td><%= producto.tipo.nombre %></td>
              <td><%= link_to 'Show', producto, class: "btn waves-effect waves-light blue lighten-1 btn-small" %></td>
              <td><%= link_to 'Edit', edit_producto_path(producto), class: "btn waves-effect waves-light btn-small" %></td>
              <td><%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn waves-effect waves-light red darken-1 btn-small", onclick: "console.log('click')" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nuevo Producto', new_producto_path %>
    </di>
  </div>
</div>
