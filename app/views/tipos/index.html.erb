<div class="container">
  <div class="row">
    <div class="col s9">
      <h1>Lista de tipos</h1>
      <div class="row">
        <div class="col s8 offset-s2">
          <table class="striped">
            <thead>
              <tr>
                <th>Nombre</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @tipos.each do |tipo| %>
                <tr>
                  <td><%= tipo.nombre %></td>
                  <td><%= link_to 'Ver', tipo, class: "btn waves-effect waves-light blue lighten-1 btn-small" %></td>
                  <td><%= link_to 'Editar', edit_tipo_path(tipo), class: "btn waves-effect waves-light btn-small" %></td>
                  <td><%= link_to 'Eliminar', tipo, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn waves-effect waves-light red darken-1 btn-small" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>  
      <br>

      <%= link_to 'Nuevo Tipo', new_tipo_path %>

    </div>
  </div>
</div>
