<div class="container">
  <h1 class="thin">Lista de usuarios</h1>
  <div class="row">
    <div class="col s6 offset-s3">
      <table class="striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Edad</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.nombre %></td>
              <td><%= user.edad %></td>
              <td><%= link_to 'Ver', user , class: "btn waves-effect waves-light blue lighten-1" %></td>
              <td><%= link_to 'Editar', edit_user_path(user) , class: "btn waves-effect waves-light" %></td>
              <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn waves-effect waves-light red darken-1" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>

  <%= link_to 'Crear usuario', new_user_path %>
</div>