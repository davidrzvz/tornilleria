<div class="row">
  <div class="col s6 offset-s3">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input-field">
        <%= f.text_field :nombre, name:"nombre" , class: ""%>
        <%= f.label :nombre, for: "user_nombre" %>
      </div>
      <div class="input-field">
        <%= f.text_field :edad , name:"edad", class: ""%>
        <%= f.label :edad %>
      </div>
      <div class="input-field">
        <input type="text" class="datepicker" id="birthdate" name="birthdate">
        <label for="birthdate" class="">Birthdate</label>
      </div>
      <div class="actions">
        <!-- <%= f.submit class: "btn" %>-->
        <% if @user.nombre == nil %>
          <button type="submit" class="waves-effect waves-light btn">Crear Usuario</button>
        <% else %>
          <button type="submit" class="waves-effect waves-light btn">Update Usuario</button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
